print("Задача №1 Арифметичні операції")
print()
variable_1 = 10
variable_2 = 7
print("Перше число",variable_1)
print("Друге число",variable_2)
print()
print("Сума:",variable_1 + variable_2)
print("Різниця:",variable_1 - variable_2)
print("Добуток:",variable_1 * variable_2)
print("Частка:",variable_1 / variable_2)
print()
print()
print("Задача №2 Залишок від ділення")
print()
print("Перше число",variable_1)
print("Друге число",variable_2)
print()
print("Залишок від ділення першого числа на друге:",variable_1 % variable_2)
print()
print()
print("Задача №3 Цілочисельне ділення")
print()
print("Перше число",variable_1)
print("Друге число",variable_2)
print()
print("Скільки разів перше число ділиться на друге без залишку:",variable_1 // variable_2)
print()
print()
